<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" styleClass="background" prefHeight="200.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Flights.ExploreFlightsController">
    
    <ImageView fitWidth="600" preserveRatio="true">
    <Image url="/image/flight.png"/>
    </ImageView>

    <Separator/>
    <Label fx:id="displayWelcome"/>
    <Separator/>

    <HBox alignment="CENTER" fillHeight="true" xmlns:fx="http://javafx.com/fxml/1">
        <Button text="View All Flights" onAction="#viewFlights" prefWidth="120"/>
        <Button text="View Flights by Country" onAction="#viewFlightsByCountry" prefWidth="120"/>
        <Button text="Add Flight" onAction="#addFlight" prefWidth="120"/>
        <Button text="Remove Flight" onAction="#removeFlight" prefWidth="120"/>
        <Button text="Close" onAction="#handleClose" prefWidth="120"/>
    </HBox>

<stylesheets>
<URL value="@../style.css"/>
</stylesheets>  

</VBox>