<VBox alignment="CENTER" styleClass="background" prefHeight="200.0" prefWidth="800.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AgencyController">
        
    <ImageView fitWidth="800" preserveRatio="true">
        <Image url="/image/agency.png"/>
    </ImageView>

    <Separator/>
    <Label fx:id="displayWelcome"/>
    <Separator/>

    <HBox alignment="CENTER" fillHeight="true" xmlns:fx="http://javafx.com/fxml/1">
        <Button text="Explore Flights" onAction="#handleFlights" prefWidth="800"/>
        <Button text="Explore Destinations" onAction="#handleDestinations" prefWidth="800"/>
        <Button text="Book a Trip" onAction="#handleTrips" prefWidth="800"/>
        <Button text="Exit" onAction="#handleClose" prefWidth="800"/>
    </HBox>

        <stylesheets>
            <URL value="@style.css"/>
        </stylesheets>

</VBox>
