<VBox alignment="CENTER" styleClass="background" prefHeight="200.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Destinations.ExploreDestinationsController">
        
    <ImageView fitWidth="600" preserveRatio="true">
    <Image url="/image/destination.png"/>
    </ImageView>

    <Separator/>
    <Label fx:id="displayWelcome"/>
    <Separator/>

    <HBox alignment="CENTER" fillHeight="true">
        <Button text="View All Destinations" onAction="#viewDestinations" prefWidth="120"/>
        <Button text="View Destinations by Country" onAction="#viewDestinationsByCountry" prefWidth="120"/>
        <Button text="Add Destination" onAction="#addDestination" prefWidth="120"/>
        <Button text="Remove Destination" onAction="#removeDestination" prefWidth="120"/>
        <Button text="Close" onAction="#handleClose" prefWidth="120"/>
    </HBox>

<stylesheets>
<URL value="@../style.css"/>
</stylesheets>


</VBox>